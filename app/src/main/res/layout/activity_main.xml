<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:padding="10dp"
            android:id="@+id/btnMVC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@color/teal_200"
            android:text="Model-View-Controller (MVC)"
            android:textSize="13sp" />

        <Button
            android:padding="10dp"
            android:id="@+id/btnMVP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnMVC"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/teal_200"
            android:text="Model-View-Presenter (MVP)"
            android:textSize="13sp" />

        <Button
            android:background="@color/teal_200"
            android:padding="10dp"
            android:id="@+id/btnMVVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnMVP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Model-View-ViewModel (MVVM)" />
    </RelativeLayout>
</layout>